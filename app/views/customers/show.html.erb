<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Address:</strong>
  <% if @customer.address %>
    <%= "#{@customer.address.street_details}, #{@customer.address.suburb}, #{@customer.address.city}, #{@customer.address.postcode}" %>
  <% end %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @customer.phone_number %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
